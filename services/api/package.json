{
  "name": "api",
  "scripts": {
    "//": "NOTE: NODE_ENV=\"${NODE_ENV:-development}\" assigns NODE_ENV if it exist (eg test), else defauilts to development",
    "dev": "NODE_ENV=\"${NODE_ENV:-development}\" nodemon --require ./src/pre-boot.cjs --require @swc-node/register --watch src --ext ts ./src/api.ts",
    "inspect": "NODE_ENV=development node --require ./src/pre-boot.cjs --require @swc-node/register --inspect ./src/api.ts",
    "start": "NODE_ENV=production node --require ./src/pre-boot.cjs --require @swc-node/register ./src/api.ts"
  },
  "engines": {
    "node": ">=18.2.0",
    "pnpm": ">=7.18.0"
  },
  "dependencies": {
    "@mobily/ts-belt": "^3.13.1",
    "@swc-node/register": "^1.5.4",
    "@swc/core": "^1.3.21",
    "@trpc/client": "^10.4.3",
    "@trpc/server": "^10.4.3",
    "dotenv-extended": "^2.9.0",
    "execa": "5.1.1",
    "http-status-codes": "^2.2.0",
    "koa": "^2.13.4",
    "luxon": "^3.1.1",
    "superjson": "^1.11.0",
    "tsee": "^1.3.2",
    "typescript": "^4.9.3",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.20"
  }
}
