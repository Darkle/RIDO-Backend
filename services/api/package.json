{
  "name": "api",
  "scripts": {
    "//": "NOTE: dotenv-extended cli can start processes, so dont use && as that loses the previous commands env vars.",
    "load-env-cli": "dotenv-extended --path=../../.env --defaults=../../.env.defaults --schema=./../.env.schema --errorOnMissing=true --errorOnRegex=true --assignToProcessEnv=true",
    "gen-prisma-client": "pnpm run load-env-cli prisma generate",
    "dev-start": "NODE_ENV=development node --require ./src/env-loader.cjs --require @swc-node/register --watch ./src/api.ts",
    "dev-setup": "TODO: needs to be redone node ./src/setup.cjs && pnpm run load-env-cli prisma migrate dev && pnpm run load-env-cli prisma generate",
    "prod-setup": "TODO: needs to be redone node ./src/setup.cjs && pnpm run load-env-cli prisma migrate deploy && pnpm run gen-prisma-client",
    "prod-start": "NODE_ENV=production pnpm run setup-prod && node --require ./src/env-loader.cjs --require @swc-node/register ./src/api.ts",
    "inspect": "NODE_ENV=development node --require ./src/env-loader.cjs --require @swc-node/register --inspect ./src/api.ts"
  },
  "engines": {
    "node": ">=18.2.0",
    "pnpm": ">=7.18.0"
  },
  "dependencies": {
    "@mobily/ts-belt": "^3.13.1",
    "@prisma/client": "^4.8.1",
    "@stdlib/error-to-json": "^0.0.7",
    "@swc-node/register": "^1.5.4",
    "@swc/core": "^1.3.24",
    "@trpc/client": "^10.7.0",
    "@trpc/server": "^10.7.0",
    "dotenv-extended": "^2.9.0",
    "http-status-codes": "^2.2.0",
    "koa": "^2.14.1",
    "luxon": "^3.2.0",
    "microtime": "^3.1.1",
    "node-graceful-shutdown": "^1.1.5",
    "node-static": "^0.7.11",
    "pratica": "^2.1.0",
    "ramda": "^0.28.0",
    "stream": "^0.0.2",
    "superjson": "^1.12.1",
    "tiny-invariant": "^1.3.1",
    "ts-brand": "^0.0.2",
    "tsee": "^1.3.2",
    "typescript": "^4.9.4",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "prisma": "^4.8.1",
    "ts-essentials": "^9.3.0",
    "type-fest": "^3.5.0"
  }
}
