{
  "name": "api",
  "scripts": {
    "//": "NOTE: NODE_ENV=\"${NODE_ENV:-development}\" assigns NODE_ENV if it exist (eg test), else defaults to development",
    "dev": "NODE_ENV=\"${NODE_ENV:-development}\" node --require ./src/pre-boot.cjs --require @swc-node/register --watch ./src/api.ts",
    "db-init": "dotenv-extended --path=../../.env --defaults=../../.env.defaults edgedb project init --non-interactive && edgedb migrate",
    "db-create-migrations": "edgedb migration create",
    "db-destroy": "edgedb instance destroy -I api",
    "db-gen-ts-interfaces": "npx @edgedb/generate interfaces",
    "inspect": "NODE_ENV=development node --require ./src/pre-boot.cjs --require @swc-node/register --inspect ./src/api.ts",
    "///": "NOTE: in the docker file, run db-init before start",
    "start": "NODE_ENV=production node --require ./src/pre-boot.cjs --require @swc-node/register ./src/api.ts"
  },
  "engines": {
    "node": ">=18.2.0",
    "pnpm": ">=7.18.0"
  },
  "dependencies": {
    "@mobily/ts-belt": "^3.13.1",
    "@stdlib/error-to-json": "^0.0.7",
    "@swc-node/register": "^1.5.4",
    "@swc/core": "^1.3.23",
    "@trpc/client": "^10.5.0",
    "@trpc/server": "^10.5.0",
    "dotenv-extended": "^2.9.0",
    "edgedb": "^1.0.2",
    "http-status-codes": "^2.2.0",
    "knex": "^2.3.0",
    "koa": "^2.14.1",
    "luxon": "^3.1.1",
    "microtime": "^3.1.1",
    "node-graceful-shutdown": "^1.1.5",
    "node-static": "^0.7.11",
    "pratica": "^2.1.0",
    "ramda": "^0.28.0",
    "stream": "^0.0.2",
    "superjson": "^1.12.0",
    "ts-brand": "^0.0.2",
    "tsee": "^1.3.2",
    "typescript": "^4.9.4",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@edgedb/generate": "^0.0.7",
    "ts-essentials": "^9.3.0"
  }
}
