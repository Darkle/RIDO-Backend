{
  "name": "api",
  "scripts": {
    "//": "NOTE: NODE_ENV=\"${NODE_ENV:-development}\" assigns NODE_ENV if it exist (eg test), else defaults to development",
    "dev": "NODE_ENV=\"${NODE_ENV:-development}\" node --require ./src/pre-boot.cjs --require @swc-node/register --watch ./src/api.ts",
    "db-init": "dotenv-extended --path=../../.env --defaults=../../.env.defaults npm-run-all --parallel db-start db-import",
    "db-start": "surreal start --user root --pass root --strict",
    "db-import": "sleep 2 && surreal import rido-schema.suql --db rido --ns rido --user root --pass root --conn http://127.0.0.1:8000",
    "inspect": "NODE_ENV=development node --require ./src/pre-boot.cjs --require @swc-node/register --inspect ./src/api.ts",
    "///": "NOTE: in the docker file, run db-init before start",
    "start": "NODE_ENV=production node --require ./src/pre-boot.cjs --require @swc-node/register ./src/api.ts"
  },
  "engines": {
    "node": ">=18.2.0",
    "pnpm": ">=7.18.0"
  },
  "dependencies": {
    "@mobily/ts-belt": "^3.13.1",
    "@stdlib/error-to-json": "^0.0.7",
    "@swc-node/register": "^1.5.4",
    "@swc/core": "^1.3.24",
    "@trpc/client": "^10.7.0",
    "@trpc/server": "^10.7.0",
    "dotenv-extended": "^2.9.0",
    "http-status-codes": "^2.2.0",
    "koa": "^2.14.1",
    "luxon": "^3.2.0",
    "microtime": "^3.1.1",
    "node-graceful-shutdown": "^1.1.5",
    "node-static": "^0.7.11",
    "npm-run-all": "^4.1.5",
    "pratica": "^2.1.0",
    "ramda": "^0.28.0",
    "stream": "^0.0.2",
    "superjson": "^1.12.1",
    "surrealdb.js": "^0.5.0",
    "tiny-invariant": "^1.3.1",
    "ts-brand": "^0.0.2",
    "tsee": "^1.3.2",
    "typescript": "^4.9.4",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "ts-essentials": "^9.3.0",
    "type-fest": "^3.5.0"
  }
}
